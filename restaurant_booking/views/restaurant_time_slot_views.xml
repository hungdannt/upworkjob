<odoo>
    <record id="view_time_slot_tree" model="ir.ui.view">
        <field name="name">restaurant.time.slot.tree</field>
        <field name="model">restaurant.time.slot</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_time_slot_form" model="ir.ui.view">
        <field name="name">restaurant.time.slot.form</field>
        <field name="model">restaurant.time.slot</field>
        <field name="arch" type="xml">
            <form string="Time Slot">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_time_slot" model="ir.actions.act_window">
        <field name="name">Time Slots</field>
        <field name="res_model">restaurant.time.slot</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
