<odoo>
    <template id="table_selection_template" name="Table Booking">
        <t t-call="website.layout">
            <owl-component name="restaurant_booking.TableBooking" />
        </t>
    </template>

    <template id="booking_success_template" name="Booking Success">
        <t t-call="website.layout">
            <div class="container mt-3 text-center mb-4">
                <div class="card mx-auto" style="max-width: 600px;">
                    <div class="card-body p-5">
                        <i class="fa fa-check-circle text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 text-success">Booking Confirmed!</h2>
                        <p class="lead">Your table reservation has been successfully created.</p>
                        
                        <div class="booking-details mt-4">
                            <h5>Booking Details:</h5>
                            <p><strong>Booking ID:</strong> <t t-esc="booking.name or booking.id"/></p>
                            <p><strong>Name:</strong> <t t-esc="booking.customer_name"/></p>
                            <p><strong>Phone:</strong> <t t-esc="booking.customer_phone"/></p>
                            <p><strong>Date &amp; Time:</strong> <t t-esc="booking.booking_date"/> at <t t-esc="booking.booking_time"/></p>
                            <p><strong>Guests:</strong> <t t-esc="booking.guest_count"/> people</p>
                        </div>
                        
                        <a href="/booking" class="btn btn-primary mt-3">Book Another Table</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
