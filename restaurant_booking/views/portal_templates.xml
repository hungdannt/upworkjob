<odoo>
    <template id="table_selection_template" name="Table Booking">
        <t t-call="website.layout">
            <owl-component name="restaurant_booking.TableBooking" />
        </t>
    </template>
    <template id="admin_floor_layout_template" name="Admin Floor Layout">
        <t t-call="website.layout">
            <owl-component name="restaurant_booking.AdminFloorLayout" />
        </t>
    </template>

    <template id="booking_success_template" name="Booking Success">
        <t t-call="website.layout">
            <div class="card text-center shadow-lg border-0 rounded-3 p-5">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fa fa-check-circle text-success fa-4x"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Thank You!</h2>
                    <p class="text-muted mb-4">
                       Thank you for your table reservation request. We will confirm your booking shortly
                    </p>
                    <a href="/" class="btn btn-primary btn-lg rounded-pill">
                        <i class="fa fa-home me-2"></i> Back to Home
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
