<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="restaurant_booking.TableBookingTemplate" owl="1">
        <div class="booking-form-portal">
            <div class="container mt-3 mb-5">
                <!-- Restaurant Image -->
                <div class="restaurant-image mb-4 text-center">
                    <img src="/restaurant_booking/static/img/restaurant.jpg" class="img-fluid rounded"/>
                </div>

                <div class="card shadow-sm table-booking-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-check me-2"></i>
                            Table Reservation
                        </h5>
                    </div>
                    <div class="card-body">
                        <form t-on-submit="onSubmitBooking">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="customer_name" placeholder="Full Name" required=""/>
                                        <label>Full Name *</label>
                                    </div>  
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" name="customer_phone" placeholder="Phone" required=""/>
                                        <label>Phone Number *</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" name="customer_email" placeholder="Email"/>
                                        <label>Email Address</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="date" class="form-control" t-att-value="state.date" widget="date" name="booking_date" t-on-change="onDateChange" required=""/>
                                        <label>Date *</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select t-if="state.timeSlots" class="form-control" name="booking_time" required="">
                                            <t t-foreach="state.timeSlots" t-as="slot" t-key="slot.id">
                                                <option t-att-value="slot.id"><t t-esc="slot.name"/></option>
                                            </t>
                                        </select>
                                        <t t-else="">
                                            <span class="form-control">No available time slots now, please try later or choose another date</span>
                                        </t>
                                        <label>Time Slot *</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input type="number" class="form-control" name="guest_count" min="1" max="20" value="2" required=""/>
                                        <label>Number of Guests *</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" name="notes" placeholder="Special requests..." style="height: 80px;"></textarea>
                                        <label>Special Notes</label>
                                    </div>
                                </div>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-primary btn-lg" t-att-disabled="state.loading">
                                    <t t-if="state.loading">
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        Processing...
                                    </t>
                                    <t t-else="">
                                        <i class="fa fa-check me-2"></i>
                                        Submit
                                    </t>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>

