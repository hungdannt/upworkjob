<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Purchase Order Form -->
    <record id="purchase_order_form_custom" model="ir.ui.view">
        <field name="name">purchase.order.form.custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="quote_ref"/>
                <field name="requested_by"/>
                <field name="delivery_terms"/>
                <field name="other_terms"/>
            </field>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="discount"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Company Form -->
    <record id="res_company_form_custom" model="ir.ui.view">
        <field name="name">res.company.form.custom</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="company_registry" position="after">
                <field name="cin_number" placeholder="CIN Number"/>
                <field name="gstin" placeholder="GST Number"/>
            </field>
        </field>
    </record>
</odoo>